<h1>Timeline</h1>   
<%=form_tag '/write', method: 'post'%>
    <textarea class="form-control" rows="3" name="naeyong"></textarea>
    <input class="btn btn-success" type="submit">
</form>
<ul>
    <% @blogs.each do |b| %>
        <li>
            <%=b.user.email%> : 
            <div class="well">
                <%=b.content%>
            </div>
            <a href="/edit?id=<%=b.id%>">수정</a>
            <a href="/destroy?id=<%=b.id%>">삭제</a>
            <%=form_tag '/comment', method: 'post', class: "form-inline" %>
                <input type="hidden" name="blog_id" value="<%=b.id%>">
                <div class="form-group">
                    <input type="text" name="comment" class="form-control">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary">
                </div>

            </form>
            <ol>
                <% b.comments.each do |c| %>
                    <li><%=c.user.email%> : <%=c.msg%></li>
                    <a href="/cedit?id=<%=c.id%>">수정</a>
                    <a href="/cdestroy?id=<%=c.id%>">삭제</a>
                <% end %>
            </ol>
        </li>
    <% end %>
</ul>